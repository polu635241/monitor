<UserControl x:Class="MonitorServer.Windows.AppMonitorResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localWindow="clr-namespace:MonitorServer.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <StackPanel Orientation="Horizontal">
        <Label Content="{Binding appName}" Foreground="White" Width="230"/>
        <Label Content="{Binding appStatus}" Foreground="Black" Background="{Binding appStatusColor}"/>
    </StackPanel>
</UserControl>
