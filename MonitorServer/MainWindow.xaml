<Window x:Class="MonitorServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorServer"
        xmlns:localWindows="clr-namespace:MonitorServer.Windows"
        mc:Ignorable="d"
        Title="MonitorServer" MaxHeight="600" MinHeight="600" MaxWidth="450" MinWidth="450">
    <StackPanel>
        <ScrollViewer Height="570" HorizontalScrollBarVisibility="Hidden">
            <ListBox x:Name="CacheClientControls" Width="450" BorderThickness="0">
                <ListBox.ItemContainerStyle>
                    <StaticResource ResourceKey="NoSelectBlankStyle"/>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <localWindows:CacheClientControl/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </StackPanel>
</Window>
